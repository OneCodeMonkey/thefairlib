{
    "name": "thefair/thefairlib",
    "type": "library",
    "description": "The PHP library for TheFair",
    "keywords": [
        "thefair"
    ],
    "homepage": "https://github.com/thefair-net/thefairlib",
    "license": "MIT",
    "authors": [
        {
            "name": "Zhang Han",
            "email": "zhanghan@thefair.net.cn"
        },
        {
            "name": "Liu mingzhi",
            "email": "liumingzhi@thefair.net.cn"
        }
    ],
    "require": {
        "php": ">=7.2",
        "illuminate/database": "~6.0.0",
        "illuminate/events": "~6.0.0",
        "phpunit/phpunit": "^7.0.0",
        "friendsofphp/php-cs-fixer": "^2.9",
        "ext-pdo": "*",
        "ext-redis": "*",
        "vlucas/phpdotenv": "^3.1"
    },
    "require-dev": {
        "eaglewu/swoole-ide-helper": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "TheFairLib\\": "src/"
        },
        "files": [
            "src/Utility/Functions.php"
        ]
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1"
    }
}
